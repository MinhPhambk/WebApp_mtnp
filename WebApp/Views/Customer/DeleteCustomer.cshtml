@using WebApp.Models.BL.CustomerBL
@model CustomerDTO
@{
    ViewData["Title"] = "Delete customer";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Delete Customer</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="IndexCustomer">All customers</a></li>
                    <li class="breadcrumb-item active">Delete Customer</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div asp-action="DeleteCustomer" class="card card-default">
            <form asp-action="DeleteCustomer">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Id" class="control-label">Id</label>
                                <input asp-for="Id" class="form-control" readonly/>
                            </div>
                            <!-- /.form-group -->
                        </div>
                        
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="IndexCustomer" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Delete Customer" class="btn btn-success float-right" />
                </div>
            </form>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->